{
    "name": "wayn3r/php-server",
    "description": "Servidor de PHP para creaci√≥n de APIs basado en express.js",
    "type": "library",
    "keywords": ["php-server", "express", "router"],
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "wayn3r",
            "email": "w9delacruz@gmail.com"
        }
    ],
    "scripts": {
        "start": "php -S localhost:8000 -c src/index.php",
        "start:dev": "composer dump && composer start",
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html=coverage",
        "lint": "phpcs src/ -s",
        "lint:fix": "phpcbf src/"
    },
    "autoload": {
       "classmap": [
           "src"
       ]        
    },
    "config": {
        "process-timeout": 0
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.6.2",
        "phpunit/phpunit": "^9.5.11"
    }
  
}
